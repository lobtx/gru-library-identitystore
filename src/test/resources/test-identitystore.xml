<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.0.xsd" >

    <!-- IHttpTransportProvider declarations -->
    <bean id="httpAccessTransport" class="fr.paris.lutece.plugins.identitystore.web.service.HttpAccessTransport" />
    <bean id="simpleRestTransport" class="fr.paris.lutece.plugins.identitystore.web.service.SimpleRestTransport" />

    <!-- IIdentityTransportProvider declarations -->
    <!-- if not forced AbstractIdentityTransportRest impl, use httpAccessTransport by default -->
    
    <bean id="mockTransport" class="fr.paris.lutece.plugins.identitystore.web.rs.service.MockIdentityTransportRest">
        <property name="IdentityStoreEndPoint">
            <value>http://127.0.0.1:9092/lutece/rest/identitystore/</value>
        </property>
    </bean>
    <bean id="apiTransport.httpAccess" class="fr.paris.lutece.plugins.identitystore.web.rs.service.IdentityTransportApiManagerRest">
        <property name="IdentityStoreEndPoint">
            <value>http://127.0.0.1:9092/lutece/rest/identitystore/</value>
        </property>
        <property name="apiManagerEndPoint">
            <value>http://127.0.0.1:9092/lutece/rest/api/token</value>
        </property>
    </bean>
    <bean id="apiTransport.simpleRest" class="fr.paris.lutece.plugins.identitystore.web.rs.service.IdentityTransportApiManagerRest">
        <property name="IdentityStoreEndPoint">
            <value>http://127.0.0.1:9092/lutece/rest/identitystore/</value>
        </property>
        <property name="apiManagerEndPoint">
            <value>http://127.0.0.1:9092/lutece/rest/api/token</value>
        </property>
        <property name="httpTransport">
            <ref bean="simpleRestTransport"/>
        </property>
    </bean>
    <bean id="restTransport.httpAccess" class="fr.paris.lutece.plugins.identitystore.web.rs.service.IdentityTransportRest">
        <property name="IdentityStoreEndPoint">
            <value>http://127.0.0.1:9092/lutece/rest/identitystore/</value>
        </property>
    </bean>
    <bean id="restTransport.simpleRest" class="fr.paris.lutece.plugins.identitystore.web.rs.service.IdentityTransportRest">
        <property name="IdentityStoreEndPoint">
            <value>http://127.0.0.1:9092/lutece/rest/identitystore/</value>
        </property>
        <property name="httpTransport">
            <ref bean="simpleRestTransport"/>
        </property>
    </bean>
    
    <!-- IdentityService impl -->
       
    <bean id="testIdentityServiceMock" class="fr.paris.lutece.plugins.identitystore.web.service.IdentityService">
        <constructor-arg ref="mockTransport"/>
    </bean> 
    
    <bean id="testIdentityService.api.httpAccess" class="fr.paris.lutece.plugins.identitystore.web.service.IdentityService">
        <constructor-arg ref="apiTransport.httpAccess"/>
    </bean>
    
    <bean id="testIdentityService.api.simpleRest" class="fr.paris.lutece.plugins.identitystore.web.service.IdentityService">
        <constructor-arg ref="apiTransport.simpleRest"/>
    </bean>
    
    <bean id="testIdentityService.rest.httpAccess" class="fr.paris.lutece.plugins.identitystore.web.service.IdentityService">
        <constructor-arg ref="restTransport.httpAccess"/>
    </bean>
    
    <bean id="testIdentityService.rest.simpleRest" class="fr.paris.lutece.plugins.identitystore.web.service.IdentityService">
        <constructor-arg ref="restTransport.simpleRest"/>
    </bean>
</beans>